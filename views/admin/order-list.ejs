<%- include("../../views/partials/admin/header") %>
<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css"/>
</head>
<section class="content-main">
<div class="content-header row">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="content-title card-title">Orders</h2>
       
    </div>
</div>         
        </div>
            <div class="right mt-5">
                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col"><b>Orders</b></th>
                        <th scope="col"><b>Products</b></th>
                        <th scope="col"><b>Status</b></th>
                        <th scope="col"><b>Total</b></th>
                        <th scope="col"><b>Action</b></th>
                      </tr>
                    </thead>
                    <tbody>
                        <% if (orders && orders.length > 0) { %>
                            <% orders.forEach((order) => { %>
                           <tr>
                             <td>Id: <%= order.orderId %></td>
                             <td>
                              <% order.orderedItems.forEach((item) => { %>
                                <div><%= item.name %>  (Qty: <%= item.quantity %>)</div>
                              <% }) %>
                            </td>
                             <td><%= order.status %></td>
                             <td>â‚¹<%= order.finalAmount %></td>
                             <td>
                               <a href="/admin/orderDetailsAdmin?id=<%= order._id %>" class="btn-small d-block">View</a>
                             </td>
                           </tr>
                           <% }) %>
                            <% } else { %>
                              <tr>
                                <td colspan="4" class="text-center">No orders found</td>
                              </tr>
                            <% } %>
                    </tbody>
                  </table>
        </div>
        <div class="container mt-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
                    <%for(let i=1;i<=totalPages;i++) {%>
                        <li class="page-item <%= (i===currentPage) ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%=i%>"><%= i %></a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </section>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
