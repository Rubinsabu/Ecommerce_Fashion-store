<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Dashboard </h2>
        </div>
    </div>  
        

        <div class="container-fluid py-2">
        <div class="row g-4">
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 ">
              <div class="card-body ">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <div class="d-flex align-items-center">
                    <div class="icon-shape shadow text-center rounded-circle">
                      <i class="material-icons opacity-10">paid</i>
                    </div>
                    <div>
                    <h6 class="mb-0 text-sm ms-4">Total Revenue</h6>
                    <h4 class="mb-0 ms-4 my-2">â‚¹ <%=ordersAmountSum %></h4>
                  </div>
                  </div>
                  
                </div>
                <p class="mb-0 text-sm text-muted">Overall performance</p>
              </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <div class="d-flex align-items-center">
                    <div class="icon-shape shadow text-center rounded-circle">
                      <i class="material-icons opacity-10">shopping_cart</i>
                    </div>
                    <div>
                    <h6 class="mb-0 text-sm ms-4">Total Orders</h6>
                    <h4 class="mb-0 ms-4 my-2"><%= ordercount %></h4>
                  </div>
                  </div>                  
                </div>
                <p class="mb-0 text-sm text-muted">Orders so far</p>
              </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <div class="d-flex align-items-center">
                    <div class="icon-shape shadow text-center rounded-circle">
                      <i class="material-icons opacity-10">group</i>
                    </div>
                    <div >
                    <h6 class="mb-0 text-sm ms-4">Users</h6>
                    <h4 class="mb-0 text-sm ms-4 my-2"><%= userscount %></h4>
                     </div>
                  </div> 
                </div>
                <p class="mb-0 text-sm text-muted">Users signed up</p>
              </div>
            </div>
        </div>


    </div>
    </div>

    <div class="col-8 offset-2 my-2">
        <div class="card">
            <div class="card-body">
                <canvas id="myChart"></canvas>
                <div id="hiddenMonthlyCounts" style="display: none;"><%= JSON.stringify(monthlyCounts) %></div>
            </div>
        </div>
    </div>
<script>
    console.log('<%= JSON.stringify(monthlyCounts) %>'); 
    var monthlyCounts = JSON.parse(document.getElementById('hiddenMonthlyCounts').innerText);
    var ctx = document.getElementById('myChart').getContext('2d');
var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'bar',

    // The data for our dataset
    data: {
        labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July','Aug','Sept','Oct','Nov','Dec'],
        datasets: [{
            label: 'Sales Count',
            backgroundColor:  ['rgb(255, 99, 132)','blue','green','orange','violet','yellow','red','black','indigo','orange','pink'],
            borderColor: 'rgb(255, 99, 132)',
            data: monthlyCounts,
        }]
    },

    // Configuration options go here
    options: {}
});
</script>
