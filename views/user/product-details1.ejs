<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet"/>
<!-- icons Flaticons -->
<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.6.0/uicons-regular-straight/css/uicons-regular-straight.css'>
<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.6.0/uicons-solid-straight/css/uicons-solid-straight.css'>

<style>
    /* General Styles */
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    /* Breadcrumb Navigation */
    .breadcrumb-wrap {
        padding: 10px 0;
        font-size: 14px;
    }

    .breadcrumb a {
        color: #007b5e;
        text-decoration: none;
        font-weight: 500;
    }

    .breadcrumb span {
        margin: 0 5px;
        color: #555;
    }

    /* Product Detail Container */
    .product-detail {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    /* Image Section */
    .detail-gallery {
        flex: 1;
        min-width: 300px;
    }

    .detail-gallery img {
        width: 100%;
        border-radius: 10px;
        object-fit: contain;
    }

    .slider-nav-thumbnails {
        display: flex;
        gap: 10px;
        margin-top: 10px;
        justify-content: center;
    }

    .slider-nav-thumbnails img {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border: 1px solid #ddd;
        border-radius: 5px;
        cursor: pointer;
        transition: transform 0.2s ease;
    }

    .slider-nav-thumbnails img:hover {
        transform: scale(1.1);
    }

    /* Product Information */
    .detail-info {
        flex: 1.5;
        min-width: 350px;
    }

    .title-detail {
        font-size: 30px;
        font-weight: 700;
        color: #333;
        margin-bottom: 5px;
    }

    .brand-link {
        color: #007b5e;
        text-decoration: none;
        font-weight: 500;
    }
    .pro-details-brand a {
        color: #007b5e;
    }
    .product-price {
        margin: 15px 0;
        font-size: 24px;
        font-weight: 700;
        color: #007b5e;
    }

    .product-price .old-price {
        text-decoration: line-through;
        color: #aaa;
        font-weight: 400;
        margin-left: 10px;
        font-size: 20px;
    }

    .product-price .save-price {
        color: #e74c3c;
        font-weight: 500;
        font-size: 16px;
    }

    /* Rating and Reviews */
    .rating-section {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 15px;
    }

    .rating-section i {
        color: #ffa500;
    }

    .reviews {
        color: #555;
        font-size: 14px;
    }

    /* Features List */
    .product_sort_info ul {
        list-style: none;
        padding: 0;
        margin: 0;
        color: #555;
    }

    .product_sort_info li {
        margin-bottom: 10px;
    }

    .product_sort_info i {
        color: #007b5e;
        margin-right: 8px;
    }

    /* Quantity and Add to Cart */
    .quantity-box {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 15px;
    }

    /* .qty-down, .qty-up {
        display: inline-block;
        padding: 5px 12px;
        background-color: #007b5e;
        color: #fff;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 500;
        transition: background-color 0.2s ease;
    }

    .qty-down:hover, .qty-up:hover {
        background-color: #005840;
    } */

    .qty-val {
        font-weight: 700;
        font-size: 18px;
    }

    .add-to-cart {
        background-color: #007b5e;
        color: #fff;
        border: none;
        padding: 10px 25px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    .add-to-cart:hover {
        background-color: #005840;
    }

    /* Wishlist icon styling */
    .wishlist a {
        font-size: 24px;
        color: #007b5e;
        transition: color 0.3s;
    }

    .wishlist a:hover {
        color: #005840;
    }

    .detail-extralink {
    display: flex;
    align-items: center;
    justify-content: flex-start; /* Align all items to the start */
    gap: 15px; /* Space between items */
    }

/* Styling for quantity buttons */
.detail-qty {
    display: flex;
    align-items: center;
}

/* .qty-down, .qty-up {
    display: inline-block;
    padding: 10px;
    background-color: #f5f5f5;
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.2s;
} */

.qty-down:hover, .qty-up:hover {
    background-color: #007b5e; 
    color: white;
}
    /* Availability */
    .availability {
        color: #007b5e;
        font-weight: 600;
    }

    /* Links and Tags */
    .stock-code, .tags a {
        color: #007b5e;
        text-decoration: none;
        font-weight: 500;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .product-detail {
            flex-direction: column;
        }

        .slider-nav-thumbnails img {
            width: 50px;
            height: 50px;
        }
    }
    a , ins {
    text-decoration: none;
    }
    .product-meta {
    list-style-type: none; /* Remove bullet points */
    padding: 0;
    margin: 0;
    }

.product-meta li {
    margin-bottom: 5px; /* Reduce the gap between list items */
}

.product-meta a {
    color: #007b5e; /* Change link color */
    text-decoration: none; /* Remove underline */
}

/* For star rating */
.product-rate-cover {
    display: flex;
    align-items: center;  
}
.product-rate {
    display: flex;
    align-items: center;
}

.star {
    font-size: 20px; /* Adjust size of the stars */
    color: #d3d3d3; /* Default color for unfilled stars */
}

.product-rating {
    display: flex;
    gap: 5px;
}

.product-rating i {
    font-size: 20px;
    color: #f1c40f; /* Color for filled stars (yellow) */
}

/* Adjust the stars based on rating percentage */
.product-rating .star-filled {
    color: #f1c40f; /* Yellow color for filled stars */
}

.product-rating .star-empty {
    color: #d3d3d3; /* Grey color for empty stars */
}
</style>


<main class="main">
 <div class="page-header breadcrumb-wrap">
     <div class="container">
         <div class="breadcrumb">
             <a href="#" rel="nofollow">Home</a>
             <span>></span> Fashion
             <span>></span>Product Detail Page
         </div>
     </div>
 </div>
 <section class="mt-50 mb-50">
     <div class="container">
         <div class="row">
             <div class="col-lg-9">
                 <div class="product-detail accordion-detail">
                     <div class="row mb-50">
                         <div class="col-md-6 col-sm-12 col-xs-12">
                             <div class="detail-gallery">
                                 <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                 <div class="product-image-slider">
                                     <figure class="border-radius-10">
                                         <img src="/uploads/re-image/<%=product.productImage[0] %>" alt="product Image">
                                     </figure>
                                     <!-- <figure class="border-radius-10">
                                       <img src="/uploads/re-image/<%=product.productImage[1] %>" alt="product Image">
                                    </figure>
                                    <figure class="border-radius-10">
                                       <img src="/uploads/re-image/<%=product.productImage[2] %>" alt="product Image">
                                    </figure>
                                    <figure class="border-radius-10">
                                       <img src="/uploads/re-image/<%=product.productImage[3] %>" alt="product Image">
                                    </figure>
                                    <figure class="border-radius-10">
                                       <img src="/uploads/re-image/<%=product.productImage[4] %>" alt="product Image">
